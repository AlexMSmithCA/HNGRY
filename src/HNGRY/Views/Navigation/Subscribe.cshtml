@{
    ViewData["Title"] = "Subscribe";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

@section Styles {
    <link rel="stylesheet" href="~/css/subscribe.css" />
}

@section Scripts {
    <script src="~/js/subscribe.js" asp-append-version="true"></script>
}

<div class="success-message alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    Your subscription settings have been updated!
</div>
    <div class="form-group row">
        <label class="col-sm-2">Alert me via</label>
        <div class="col-sm-10">
            <div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="emailCheckbox"> Email
                    </label>
                </div>
                <div class="email-input">
                    <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
                </div>
            </div>
            <div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="phoneCheckbox"> Text
                    </label>
                </div>
                <div class="phone-input">
                    <input type="tel" class="form-control" id="inputPhoneNumber3" placeholder="Phone number">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2">Tell me about</label>
        <div class="col-sm-10">
            <div class="checkbox" id="foodSubmissionCheckbox">
                <label>
                    <input type="checkbox"> Food submissions
                </label>
            </div>
            <div class="checkbox" id="postsFromCheckbox">
                <label>
                    <input type="checkbox"> Posts from Bonnie and Dale
                </label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
            <button class="subscribe-button btn btn-primary">Update subscription</button>
        </div>
    </div>