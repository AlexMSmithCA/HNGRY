@using HNGRY.ViewModels
@{
	var _model = (PostedAnswersViewModel) this.Model;
}


<div>
	<h4>Question responses from food@apt</h4>
	@foreach (var answer in _model.Answers)
	{

		<div class="panel panel-default">
			<div class="panel-heading">@answer.Title</div>
			<div class="panel-body">
                <div class="answer-author">@answer.AuthorName</div>
                <div class="answer-message">@answer.Message</div>
				<div class="answer-time"> Posted: @answer.DateSubmittedDisplayString</div>
			</div>
		</div>
	}
	<nav>
		<ul class="pager">
			<li><a href="#">Previous</a></li>
			<li><a href="#">Next</a></li>
		</ul>
	</nav>
</div>